extends ../layouts/common

block content
    h1 
        span.mr-2 Users
        a.btn.btn-primary.mb-2(href="/users/add") add
    .d-flex.aline-items-center
        form.ml-auto(action="/users/search", method="GET")
            input(type="text", name="q")
            button Search

    table.table
        tr
            th Avatar
            th Name
            th Phone
            th Actions
        each user in users
            tr
                td
                    img(src=user.avatar, width=40)
                td= user.name
                td= user.phone
                td
                    a.btn.btn-light(href="/users/"+ user.id) View